<% layout('./layouts/boilerplate') %>
    <div class="container flash-messages text-danger bg-danger-subtle w-25">
        <!-- Empty because the script will handle showing the messages -->
    </div>
    <div class="container d-flex justify-content-center align-products-center w-50 mt-4">
        <div class="row g-3 border d-flex justify-content-center w-75">
            <h1 class="text-center">New Transaction</h1>
            <form class="input-group w-auto">
                <input type="number" name="num" class="form-control" id="product-input" placeholder="# product" />
                <button class="btn btn-success" id="buy-btn">Buy</button>
                <button type="button" class="btn btn-danger" id="return-btn" data-bs-toggle="modal"
                    data-bs-target="#exampleModal">
                    Return
                </button>
            </form>
            <div>
                <ol class="list-group list-group-numbered list-group-flush" id="products"></ol>
            </div>
            <div class="d-flex justify-content-center row">
                <h3 class="text-center col-md-12">Total: <span id="total">0</span>$</h3>
                <button class="btn btn-secondary col-md-3" id="reset-btn">Reset</button>
                <button class="btn btn-primary col-md-3" id="checkout-btn">Checkout</button>
            </div>
        </div>
    </div>
    <!-- Transaction Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Enter Transaction Number</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="form-group">
                        <input class="form-control" type="number" name="num" id="transaction-input"
                            placeholder="# transaction">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="transaction-btn">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Checkout Modal -->
    <div class="modal fade" id="checkout-modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="checkout-modal-title">Enter Payment Method</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="cash-radio">
                            <label class="form-check-label" for="cash-radio">
                                Cash
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="credit-card-radio">
                            <label class="form-check-label" for="credit-card-radio">
                                Credit Card
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="debit-card-radio"
                                checked>
                            <label class="form-check-label" for="debit-card-radio">
                                Debit Card
                            </label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="method-btn">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Success modal -->
    <div class="modal" id="success-btn" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body bg-success">
                    <p>Transaction successfully completed!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Go Back</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script type="text/javascript" src="/scripts/productsList.js"></script>